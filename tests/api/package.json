{
    "name": "sme-ptrf-testesautomatizados",
    "version": "1.0.0",
    "description": "Testes automatizados com Cypress + Allure + Cucumber",
    "main": "cypress.config.js",
    "scripts": {
        "test": "npm run test:allure",
        "test:ui": "cypress run --spec 'cypress/e2e/ui/**/*.cy.js' --reporter mocha-allure-reporter",
        "test:api": "cypress run --spec 'cypress/e2e/api/**/*.cy.js' --reporter mocha-allure-reporter",
        "e2e": "cypress run --reporter mocha-allure-reporter",
        "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
        "test:allure": "npm run e2e && npm run report:allure",
        "preinstall": "npx npm-force-resolutions"
    },
    "supportFile": "./support/e2e.js",
    "dependencies": {
        "cypress-cloud": "^2.0.0-beta.1",
        "cypress-real-events": "^1.7.4",
        "cypress-xpath": "^2.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/plugin-transform-class-properties": "^7.25.9",
        "@babel/preset-env": "^7.26.0",
        "@babel/register": "^7.25.9",
        "@bahmutov/cypress-esbuild-preprocessor": "^2.2.4",
        "@cucumber/cucumber": "^11.2.0",
        "@cucumber/gherkin": "^32.1.0",
        "@cypress/webpack-preprocessor": "^6.0.2",
        "@shelex/cypress-allure-plugin": "^2.41.2",
        "allure-commandline": "^2.34.0",
        "css-loader": "^7.1.2",
        "cucumber": "^6.0.7",
        "cypress": "^14.5.2",
        "cypress-cucumber-preprocessor": "^4.3.1",
        "cypress-plugin-steps": "^1.1.1",
        "cypress-postgresql": "^1.0.8",
        "dotenv": "^16.4.7",
        "esbuild": "^0.25.2",
        "json-loader": "^0.5.7",
        "mocha-allure-reporter": "^1.4.0",
        "mochawesome": "^7.1.3",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "webpack": "^5.97.1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC"
}
